<h1>Listing stashes</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @stashes.each do |stash| %>
      <tr>
        <td><%= stash.description %></td>
        <td><%= link_to 'Show', stash %></td>
        <td><%= link_to 'Edit', edit_stash_path(stash) %></td>
        <td><%= link_to 'Destroy', stash, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

